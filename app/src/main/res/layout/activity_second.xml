<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/cheese_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/cheese"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rice_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/rice"
        app:layout_constraintTop_toBottomOf="@id/cheese_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/apples_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/apples"
        app:layout_constraintTop_toBottomOf="@id/rice_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/oranges_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/oranges"
        app:layout_constraintTop_toBottomOf="@id/apples_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/potato_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/potato"
        app:layout_constraintTop_toBottomOf="@id/oranges_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bread_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/bread"
        app:layout_constraintTop_toBottomOf="@id/potato_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/juice_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/juice"
        app:layout_constraintTop_toBottomOf="@id/bread_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tomatoes_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/tomatoes"
        app:layout_constraintTop_toBottomOf="@id/juice_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bananas_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/bananas"
        app:layout_constraintTop_toBottomOf="@id/tomatoes_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/salad_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="@string/salad"
        app:layout_constraintTop_toBottomOf="@id/bananas_button"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>